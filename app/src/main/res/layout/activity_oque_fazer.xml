<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".oque_fazer"
    android:background="@color/brown_light">

    <TextView
        android:id="@+id/oque_fazer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/O_que_fazer"
        android:textSize="30sp"
        android:textColor="@color/brown"
        android:textStyle="bold"
        android:layout_marginTop="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/calcular_vaso"
        style="@style/Button_2"
        android:text="Calcular no Vaso"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/oque_fazer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/focar_vaso"
        style="@style/Button_2"
        android:text="Fofocar no Vaso"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/calcular_vaso"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        style="@style/Button_2"
        android:text="Calcular no Vaso"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/focar_vaso"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="parent"/>





</androidx.constraintlayout.widget.ConstraintLayout>